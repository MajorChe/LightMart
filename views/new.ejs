    </head>
    <body>
      <%- include('partials/user_header') %>
      <div class="container py-5">

        <div class="container"> <div class=" text-center mt-5 ">
          <h1>Create A Posting</h1>
      </div>
      <div class="row ">
          <div class="col-lg-7 mx-auto">
              <div class="card mt-2 mx-auto p-4 bg-light">
                  <div class="card-body bg-light">
                      <div class="container">
                        <form id="contact-form" role="form" method="POST" action="/users/new">
                          <div class="controls">
                              <div class="row">
                                  <div class="col-md-6">
                                      <div class="form-group"> <label for="form_name">title</label> <input id="form_title" type="text" name="title" class="form-control" placeholder="What are you selling *?" required data-error="Title is required."> </div>
                                  </div>
                                  <div class="col-md-6">
                                      <div class="form-group"> <label for="form_lastname">price</label> <input id="form_price" type="text" name="price" class="form-control" placeholder="Please enter the price *" required data-error="Price is required."> </div>
                                  </div>
                              </div>
                              <div class="row">
                                  <div class="col-md-6">
                                      <div class="form-group"> <label for="form_email">image</label> <input id="form_image" type="text" name="image" class="form-control" placeholder="Please submit an image *" required data-error="Valid image is required."> </div>
                                  </div>
                                  <div class="col-md-6">
                                      <div class="form-group"> <label for="form_need">currency</label> <select id="form_need" name="need" class="form-control" required="required" data-error="Please specify currency.">
                                              <option value="" selected disabled>--Select Your Currency--</option>
                                              <option>Ethereum</option>
                                              <option>Solana</option>
                                              <option>Bitcoin</option>
                                              <option>Other</option>
                                          </select> </div>
                                  </div>
                              </div>
                              <div class="row">
                                  <div class="col-md-12">
                                      <div class="form-group"> <label for="form_message">description</label> <textarea id="form_description" name="description" class="form-control" placeholder="Please tell us about your product" rows="4" required="required" data-error="Please, write a description."></textarea> </div>
                                  </div>
                                  <div class="col-md-12"> <input type="submit" class="btn btn-success btn-send pt-2 btn-block " value="List NFT"> </div>
                              </div>
                          </div>
                      </form>
                      </div>
                  </div>
              </div> <!-- /.8 -->
          </div> <!-- /.row-->
      </div>
  </div>




        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
