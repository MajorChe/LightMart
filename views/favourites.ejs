<!DOCTYPE html>
<html lang="en">
    <head>
      <title>Favourites</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">

      <!-- <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" /> -->
      <!-- <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" /> -->
      <link rel="stylesheet" href="/styles/header.css" type="text/css" />
      <link rel="stylesheet" href="/styles/main.css" type="text/css" />
      <link rel="stylesheet" href="/styles/favouritebutton.css" type="text/css" />
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">


      <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.8.0/gsap.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
      <script type="text/javascript" src="/scripts/app.js"></script>
      <script
          src="https://kit.fontawesome.com/115a5a2ad4.js"
          crossorigin="anonymous"
        ></script>

    </head>
    <body>
      <%- include('partials/user_header', {user}) %>
      <div class="container py-5">
        <!-- For Demo Purpose-->
          <h1 class="display-4 font-weight-bold">My Favourites</h1>
          <p class="font-italic text-muted mb-0">View your favourite goodies here</p>

        <!-- First Row [Prosucts]-->

        <h2 class="font-weight-bold mb-2"><%= favourites[0].name%>'s Favourites</h2>


        <div class="row pb-5 mb-4">
          <% for (let details of favourites) { %>
            <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
              <!-- Card-->
              <div class="card rounded shadow-sm border-0">
                <div class="card-body p-4"><img src= <%= details.image %> alt="" class="img-fluid d-block mx-auto mb-3">
                  <h5> <a href="#" class="text-dark"> <%= details.title%> </a></h5>
                  <p class="small text-muted font-italic"> $<%= details.price%></p>

                  <ul class="list-inline small">
                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i> <%= details.date_created %></li>
                </li>
                  </ul>
                </div>
              </div>
            </div>


    <% } %>


        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/scripts/favourite.js"></script>
         </body>

</html>
