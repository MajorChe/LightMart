<!DOCTYPE html>
<html lang="en">

<head>
  <title>Buy and Sell NFT</title>
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">

  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css" rel="stylesheet" type="text/css">

  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script src="https://kit.fontawesome.com/115a5a2ad4.js"  crossorigin="anonymous"
    ></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;600;700&display=swap" rel="stylesheet">

</head>

<body>
  <%- include('partials/user_header') %>

  <div class="jumbotron ">
    <div class="jumbotron-overlay ">
      <div class="container jumbotron-padding  text-center">
        <% if (result) { %>
          <h1 class="display-4">Welcome to the future <%= result.name%></h1>
        <% } else { %>
          <h1 class="display-4">Welcome to the future</h1>
        <% } %>
        <p >You have entered the new world of NFTs</p>
   <p><a href="https://www.theverge.com/22310188/nft-explainer-what-is-blockchain-crypto-art-faq" class="btn btn-lg btn-success btn-circle my-4 mr-3">Learn More</a></p>
      </div>
    </div>
  </div>

 <!-- price filter -->
 <div class="filters">
  <div>
    Sort By Price:
    <form method="POST" action='/'>
      <div class="form-group">
        <label for="exampleFormControlSelect1"></label>
        <select name = "value" class="form-control" id="exampleFormControlSelect1">
          <option value = "asc" >Price: Low to high</option>
          <option value = "desc">Price: High to Low</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Filter</button>

    </form>

    <div class="container mt-5" id="about">
      <h1 class="text-center py-4">Featured Collections </h1>
      <div class="row pb-5 mb-4">
        <% for(const product of user) { %>
       <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
         <!-- Card-->
         <div class="card rounded shadow-sm border-0">
           <% if(product) { %>
           <div class="card-body p-4"><img src="<%= product.image%>" alt="shoeimg" class="img-fluid d-block mx-auto mb-3">
              <h5> <a href="./product" class="text-dark"><%= product.title%></a></h5>
              <p class="small text-muted font-italic"><%= product.price%></p>
            </div>
          </div>
        </div>
             <% } else { %>

   <div class="container mt-5" id="about">
      <h1 class="text-center py-4">Featured NFT's </h1>
      <form method="POST" action='/'>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Example select</label>
        <select name = "value" class="form-control" id="exampleFormControlSelect1">
        <option value = "asc" >Price: Low to high</option>
        <option value = "desc">Price: High to Low</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Filter</button>
      </form>
      <div class="row pb-5 mb-4">
        <% for(const product of user) { %>
        <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
          <!-- Card-->
          <div class="card rounded shadow-sm border-0">
            <div class="card-body p-4"><img src="<%= product.image%>" alt="shoeimg" class="img-fluid d-block mx-auto mb-3">
              <h5> <a href="/users/<%= product.id%>" class="text-dark"><%= product.title%></a></h5>
              <p class="small text-muted font-italic" style="font-size: x-large;"><b>$<%= product.price%></b></p>
              <li class="list-inline-item m-0"><form method="POST" action="/users/add/<%= product.id %>"> <input type="submit" style="background-color:rgb(101, 7, 189);  border-radius: 25px; border-color:rgb(101, 7, 189); color:white" value="Favourite"></form>  </i></li>
            </div>
          </div>
        </div>
        <% } %>
      </div>
  </div>

<!-- footer -->
<%- include('partials/_footer')%>

</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
